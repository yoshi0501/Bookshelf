<% if pagy.pages > 1 %>
  <nav aria-label="ページネーション" class="mt-4">
    <ul class="pagination justify-content-center mb-0">
      <% if pagy.prev %>
        <li class="page-item">
          <%= link_to pagy_url_for(pagy, pagy.prev), class: "page-link", aria: { label: "前へ" } do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">
            <i class="bi bi-chevron-left"></i>
          </span>
        </li>
      <% end %>

      <% pagy.series.each do |item| %>
        <% if item == :gap %>
          <li class="page-item disabled">
            <span class="page-link">...</span>
          </li>
        <% elsif item.is_a?(Integer) %>
          <li class="page-item <%= 'active' if item == pagy.page %>">
            <%= link_to item, pagy_url_for(pagy, item), class: "page-link", aria: { label: "ページ #{item}" } %>
          </li>
        <% end %>
      <% end %>

      <% if pagy.next %>
        <li class="page-item">
          <%= link_to pagy_url_for(pagy, pagy.next), class: "page-link", aria: { label: "次へ" } do %>
            <i class="bi bi-chevron-right"></i>
          <% end %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">
            <i class="bi bi-chevron-right"></i>
          </span>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>
