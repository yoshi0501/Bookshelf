                <span class="text-white small fw-bold">A</span>
              <% elsif manufacturer_user? %>
                <span class="text-white small fw-bold">M</span>
              <% else %>
                <span class="text-white small fw-bold"><%= current_company&.name&.first&.upcase %></span>
