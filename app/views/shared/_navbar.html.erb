          <%= link_to dashboard_path, class: "nav-link #{request.path == dashboard_path ? 'active fw-semibold' : ''}" do %>
            <i class="bi bi-house-door me-1"></i> <%= t('shared.navbar.dashboard') %>
          <% end %>
        </li>
        <% unless current_user&.normal? %>
