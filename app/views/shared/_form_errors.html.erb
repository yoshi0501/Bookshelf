<% if resource.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show shadow-sm mb-4 d-flex align-items-start" role="alert">
    <i class="bi bi-exclamation-circle-fill fs-5 me-3 flex-shrink-0"></i>
    <div class="flex-grow-1">
      <p class="fw-semibold mb-2"><%= t("errors.form_errors.heading") %></p>
      <ul class="mb-0 ps-3">
        <% resource.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
