<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('customers.import_assignments.title') %></h1>
    <p class="text-muted mb-0"><%= t('customers.import_assignments.description') %></p>
  </div>
  <div>
    <%= link_to t('shared.actions.back'), customers_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>

<% if flash[:alert] %>
  <div class="alert alert-danger mb-4">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-header bg-white border-bottom">
    <h5 class="card-title mb-1 fw-bold">
      <i class="bi bi-file-earmark-spreadsheet me-2"></i><%= t('customers.import_assignments.upload_section') %>
    </h5>
    <small class="text-muted"><%= t('customers.import_assignments.upload_desc') %></small>
  </div>
  <div class="card-body">
    <%= form_with url: import_assignments_customers_path, method: :post, multipart: true, local: true do |f| %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= label_tag :company_id, t('customers.form.company'), class: "form-label fw-semibold" %>
          <%= select_tag :company_id,
              options_from_collection_for_select(@companies, :id, :code, @selected_company_id),
              { class: "form-select", required: true, prompt: t('customers.form.select_company') } %>
        </div>
        <div class="col-md-6">
          <%= label_tag :csv_file, t('customers.import_assignments.csv_file'), class: "form-label fw-semibold" %>
          <%= file_field_tag :csv_file, accept: ".csv", class: "form-control", required: true %>
          <div class="form-text"><%= t('customers.import_assignments.file_help') %></div>
        </div>
      </div>
      <div class="mt-4">
        <%= submit_tag t('customers.import_assignments.upload_button'), class: "btn btn-primary" %>
        <%= link_to t('shared.actions.cancel'), customers_path, class: "btn btn-outline-secondary ms-2" %>
      </div>
    <% end %>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-header bg-white border-bottom">
    <h5 class="card-title mb-1 fw-bold">
      <i class="bi bi-info-circle me-2"></i><%= t('customers.import_assignments.format_section') %>
    </h5>
    <small class="text-muted"><%= t('customers.import_assignments.format_desc') %></small>
  </div>
  <div class="card-body">
    <p class="mb-2"><%= t('customers.import_assignments.csv_columns') %></p>
    <table class="table table-sm table-bordered mb-0">
      <thead class="table-light">
        <tr>
          <th>center_code</th>
          <th>approver_email</th>
          <th>member_emails</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= t('customers.import_assignments.col_center_code') %></td>
          <td><%= t('customers.import_assignments.col_approver_email') %></td>
          <td><%= t('customers.import_assignments.col_member_emails') %></td>
        </tr>
      </tbody>
    </table>
    <p class="mt-3 mb-0 small text-muted"><%= t('customers.import_assignments.usage_note') %></p>
  </div>
</div>

<% if @import_errors&.any? %>
  <div class="card border-danger shadow-sm">
    <div class="card-header bg-danger text-white">
      <i class="bi bi-exclamation-triangle-fill me-2"></i><%= t('customers.import_assignments.errors_title') %>
    </div>
    <ul class="list-group list-group-flush">
      <% @import_errors.first(20).each do |msg| %>
        <li class="list-group-item"><%= msg %></li>
      <% end %>
      <% if @import_errors.size > 20 %>
        <li class="list-group-item text-muted">... 他 <%= @import_errors.size - 20 %> 件</li>
      <% end %>
    </ul>
  </div>
<% end %>
