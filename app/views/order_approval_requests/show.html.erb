<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
  <div>
    <h1 class="h2 fw-bold mb-2">
      <i class="bi bi-clipboard-check text-primary me-2"></i>発注承認: <%= @order.order_no %>
    </h1>
    <p class="text-muted mb-0">
      <i class="bi bi-clock me-1"></i>依頼日時 <%= @order_approval_request.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </p>
  </div>
  <div>
    <%= link_to order_approval_requests_path, class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-arrow-left me-1"></i>発注承認一覧に戻る
    <% end %>
  </div>
</div>

<% if @order_approval_request.status_pending? %>
  <div class="alert alert-warning border-0 shadow-sm d-flex align-items-start mb-4" role="alert">
    <i class="bi bi-exclamation-triangle-fill fs-4 me-3 mt-1"></i>
    <div>
      <h6 class="alert-heading fw-semibold mb-1">承認待ち</h6>
      <p class="mb-0 small">この発注は承認待ちです。内容を確認のうえ、承認または却下してください。</p>
    </div>
  </div>
<% end %>

<div class="row g-4 mb-4">
  <div class="col-lg-6">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-info-circle me-2"></i>発注情報
        </h5>
      </div>
      <div class="card-body">
        <dl class="row g-2 mb-0">
          <dt class="col-4 col-sm-3 text-muted small">発注番号</dt>
          <dd class="col-8 col-sm-9 fw-medium"><%= @order.order_no %></dd>
          <dt class="col-4 col-sm-3 text-muted small">発注日</dt>
          <dd class="col-8 col-sm-9"><%= @order.order_date %></dd>
          <dt class="col-4 col-sm-3 text-muted small">発注者</dt>
          <dd class="col-8 col-sm-9"><%= @order.ordered_by_user.name || @order.ordered_by_user.email %></dd>
          <dt class="col-4 col-sm-3 text-muted small">合計金額</dt>
          <dd class="col-8 col-sm-9 fw-bold text-primary"><%= number_to_currency(@order.total_amount, unit: "¥", precision: 0) %></dd>
          <dt class="col-4 col-sm-3 text-muted small">CO2合計</dt>
          <dd class="col-8 col-sm-9"><%= @order.co2_total %> kg</dd>
        </dl>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-truck me-2"></i>配送先
        </h5>
      </div>
      <div class="card-body">
        <dl class="row g-2 mb-0">
          <dt class="col-4 col-sm-3 text-muted small">顧客</dt>
          <dd class="col-8 col-sm-9 fw-medium"><%= @order.customer.display_name %></dd>
          <dt class="col-4 col-sm-3 text-muted small">配送先</dt>
          <dd class="col-8 col-sm-9"><%= @order.full_shipping_address %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-header bg-white border-bottom">
    <h5 class="card-title mb-1 fw-bold">
      <i class="bi bi-list-ul me-2"></i>発注明細
    </h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th>商品コード</th>
            <th>商品名</th>
            <th class="text-end">数量</th>
            <th class="text-end">単価</th>
            <th class="text-end">金額</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_lines.each do |line| %>
            <tr>
              <td class="font-monospace small"><%= line.item_code %></td>
              <td class="fw-medium"><%= line.item_name %></td>
              <td class="text-end"><%= line.quantity %></td>
              <td class="text-end text-muted"><%= number_to_currency(line.unit_price_snapshot, unit: "¥", precision: 0) %></td>
              <td class="text-end fw-semibold"><%= number_to_currency(line.amount, unit: "¥", precision: 0) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="table-light">
          <tr>
            <td colspan="4" class="text-end fw-semibold">合計</td>
            <td class="text-end fw-bold"><%= number_to_currency(@order.total_amount, unit: "¥", precision: 0) %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>

<% if @order_approval_request.status_pending? %>
  <div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom">
      <h5 class="card-title mb-1 fw-bold">
        <i class="bi bi-check2-square me-2"></i>承認アクション
      </h5>
      <small class="text-muted">承認または却下を選択してください</small>
    </div>
    <div class="card-body">
      <div class="d-flex flex-wrap align-items-end gap-3">
        <%= form_with url: approve_order_approval_request_path(@order_approval_request), method: :post, class: "d-inline" do %>
          <%= button_tag type: "submit", class: "btn btn-success", data: { confirm: "この発注を承認しますか？" } do %>
            <i class="bi bi-check-lg me-1"></i>承認する
          <% end %>
        <% end %>
        <%= form_with url: reject_order_approval_request_path(@order_approval_request), method: :post, class: "d-inline flex-grow-1 flex-md-grow-0" do |f| %>
          <div class="input-group">
            <%= f.text_field :comment, placeholder: "却下理由（任意）", class: "form-control form-control-sm", style: "max-width: 220px;" %>
            <%= button_tag type: "submit", class: "btn btn-outline-danger", data: { confirm: "この発注を却下しますか？" } do %>
              <i class="bi bi-x-lg me-1"></i>却下する
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% elsif @order_approval_request.status_approved? %>
  <div class="alert alert-success border-0 shadow-sm d-flex align-items-start" role="alert">
    <i class="bi bi-check-circle-fill fs-4 me-3 mt-1"></i>
    <div>
      <h6 class="alert-heading fw-semibold mb-1">承認済み</h6>
      <p class="mb-0 small">
        <% if @order_approval_request.reviewed_by %>
          承認者: <%= @order_approval_request.reviewed_by.name || @order_approval_request.reviewed_by.email %>
          （<%= @order_approval_request.reviewed_at.strftime("%Y年%m月%d日 %H:%M") %>）
        <% else %>
          この発注は承認済みです。
        <% end %>
      </p>
    </div>
  </div>
<% elsif @order_approval_request.status_rejected? %>
  <div class="alert alert-danger border-0 shadow-sm d-flex align-items-start" role="alert">
    <i class="bi bi-x-circle-fill fs-4 me-3 mt-1"></i>
    <div>
      <h6 class="alert-heading fw-semibold mb-1">却下</h6>
      <p class="mb-0 small">
        <% if @order_approval_request.reviewed_by %>
          却下者: <%= @order_approval_request.reviewed_by.name || @order_approval_request.reviewed_by.email %>
          （<%= @order_approval_request.reviewed_at.strftime("%Y年%m月%d日 %H:%M") %>）
        <% end %>
        <% if @order_approval_request.review_comment.present? %>
          <br>理由: <%= @order_approval_request.review_comment %>
        <% end %>
      </p>
    </div>
  </div>
<% end %>
