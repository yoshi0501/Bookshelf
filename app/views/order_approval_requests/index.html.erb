<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2">発注承認依頼</h1>
    <p class="text-muted mb-0">承認待ちの発注一覧</p>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
    <div>
      <h5 class="card-title mb-1 fw-bold">発注承認依頼</h5>
      <small class="text-muted">承認待ちの発注一覧</small>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @order_approval_requests.empty? %>
      <div class="text-center py-5">
        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light mb-3" style="width: 64px; height: 64px;">
          <i class="bi bi-file-earmark-check text-muted fs-3"></i>
        </div>
        <p class="text-muted fw-medium mb-3">承認依頼はありません</p>
        <p class="text-muted small">現在、承認待ちの発注はありません。</p>
      </div>
    <% else %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>発注番号</th>
              <th>発注日</th>
              <th>顧客</th>
              <th>発注者</th>
              <th class="text-end">合計金額</th>
              <th>依頼日時</th>
              <th>ステータス</th>
              <th class="text-end">アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @order_approval_requests.each do |request| %>
              <tr>
                <td>
                  <%= link_to request.order.order_no, order_approval_request_path(request), class: "text-decoration-none fw-semibold" %>
                </td>
                <td class="text-muted"><%= request.order.order_date.strftime("%Y/%m/%d") %></td>
                <td class="fw-medium"><%= request.order.customer.display_name %></td>
                <td class="text-muted"><%= request.order.ordered_by_user.name || request.order.ordered_by_user.email %></td>
                <td class="text-end fw-semibold">
                  <%= number_to_currency(request.order.total_amount, unit: "¥", precision: 0) %>
                </td>
                <td class="text-muted"><%= time_ago_in_words(request.created_at) %>前</td>
                <td>
                  <% case request.status %>
                  <% when "pending" %>
                    <span class="badge bg-warning">承認待ち</span>
                  <% when "approved" %>
                    <span class="badge bg-success">承認済み</span>
                  <% when "rejected" %>
                    <span class="badge bg-danger">却下</span>
                  <% end %>
                </td>
                <td class="text-end">
                  <%= link_to "詳細", order_approval_request_path(request), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/pagination", pagy: @pagy %>
