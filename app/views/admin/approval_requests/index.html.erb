<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('approval_requests.index.title') %></h1>
    <p class="text-muted mb-0"><%= t('approval_requests.index.description') %></p>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
    <div>
      <h5 class="card-title mb-1 fw-bold"><%= t('approval_requests.index.title') %></h5>
      <small class="text-muted"><%= t('approval_requests.index.description') %></small>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @approval_requests.empty? %>
      <div class="text-center py-5">
        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light mb-3" style="width: 64px; height: 64px;">
          <i class="bi bi-check-circle text-muted fs-3"></i>
        </div>
        <p class="text-muted fw-medium mb-3">承認依頼はありません</p>
        <p class="text-muted small">現在、承認待ちの依頼はありません。</p>
      </div>
    <% else %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th><%= t('approval_requests.table.user') %></th>
              <th><%= t('approval_requests.table.email') %></th>
              <th><%= t('approval_requests.table.requested') %></th>
              <th><%= t('approval_requests.table.status') %></th>
              <th class="text-end"><%= t('approval_requests.table.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @approval_requests.each do |request| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                      <span class="text-primary fw-semibold small"><%= request.user_profile.name.first.upcase %></span>
                    </div>
                    <span class="fw-medium"><%= request.user_profile.name %></span>
                  </div>
                </td>
                <td class="text-muted"><%= request.user_profile.user.email %></td>
                <td class="text-muted"><%= time_ago_in_words(request.created_at) %>前</td>
                <td>
                  <% case request.status %>
                  <% when "pending" %>
                    <span class="badge bg-warning"><%= t('approval_requests.status.pending') %></span>
                  <% when "approved" %>
                    <span class="badge bg-success"><%= t('approval_requests.status.approved') %></span>
                  <% when "rejected" %>
                    <span class="badge bg-danger"><%= t('approval_requests.status.rejected') %></span>
                  <% end %>
                </td>
                <td class="text-end">
                  <% if request.status_pending? %>
                    <div class="d-flex gap-2 justify-content-end">
                      <%= button_to t('approval_requests.actions.approve'), approve_admin_approval_request_path(request), method: :post, class: "btn btn-sm btn-success" %>
                      <%= button_to t('approval_requests.actions.reject'), reject_admin_approval_request_path(request), method: :post, data: { confirm: t('approval_requests.actions.confirm_reject') }, class: "btn btn-sm btn-danger" %>
                    </div>
                  <% else %>
                    <%= link_to t('approval_requests.actions.view'), admin_approval_request_path(request), class: "btn btn-sm btn-outline-primary" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/pagination", pagy: @pagy %>
