<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('approval_requests.show.title') %></h1>
    <p class="text-muted mb-0">
      <span class="font-monospace">ID: <%= @approval_request.id %></span>
    </p>
  </div>
  <div>
    <%= link_to admin_approval_requests_path, class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-arrow-left me-1"></i><%= t('approval_requests.show.back') %>
    <% end %>
  </div>
</div>

<div class="row g-4">
  <div class="col-lg-8">
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-info-circle me-2"></i><%= t('approval_requests.show.request_info') %>
        </h5>
        <small class="text-muted"><%= t('approval_requests.show.request_info_desc') %></small>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('approval_requests.show.user_name') %></label>
            <p class="mb-0 fw-medium"><%= @approval_request.user_profile.name %></p>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('approval_requests.show.email') %></label>
            <p class="mb-0"><%= @approval_request.user_profile.user.email %></p>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('approval_requests.show.status') %></label>
            <p class="mb-0">
              <% case @approval_request.status %>
              <% when "pending" %>
                <span class="badge bg-warning"><%= t('approval_requests.status.pending') %></span>
              <% when "approved" %>
                <span class="badge bg-success"><%= t('approval_requests.status.approved') %></span>
              <% when "rejected" %>
                <span class="badge bg-danger"><%= t('approval_requests.status.rejected') %></span>
              <% end %>
            </p>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('approval_requests.show.requested_at') %></label>
            <p class="mb-0"><%= @approval_request.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
          </div>
          <% if @approval_request.reviewed_at %>
            <div class="col-md-6">
              <label class="form-label fw-semibold text-muted small mb-1"><%= t('approval_requests.show.reviewed_by') %></label>
              <p class="mb-0"><%= @approval_request.reviewed_by&.email || "-" %></p>
            </div>
            <div class="col-md-6">
              <label class="form-label fw-semibold text-muted small mb-1"><%= t('approval_requests.show.reviewed_at') %></label>
              <p class="mb-0"><%= @approval_request.reviewed_at.strftime("%Y年%m月%d日 %H:%M") %></p>
            </div>
            <% if @approval_request.review_comment.present? %>
              <div class="col-md-12">
                <label class="form-label fw-semibold text-muted small mb-1"><%= t('approval_requests.show.comment') %></label>
                <p class="mb-0"><%= @approval_request.review_comment %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @approval_request.status_pending? %>
  <div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom">
      <h5 class="card-title mb-1 fw-bold">
        <i class="bi bi-check-circle me-2"></i><%= t('approval_requests.show.actions') %>
      </h5>
      <small class="text-muted"><%= t('approval_requests.show.actions_desc') %></small>
    </div>
    <div class="card-body">
      <div class="d-flex gap-2 flex-wrap">
        <%= button_to approve_admin_approval_request_path(@approval_request), method: :post, class: "btn btn-success" do %>
          <i class="bi bi-check-circle me-1"></i><%= t('approval_requests.actions.approve') %>
        <% end %>
        <%= form_with url: reject_admin_approval_request_path(@approval_request), method: :post, class: "d-flex gap-2 flex-grow-1" do |f| %>
          <%= f.text_field :comment, placeholder: t('approval_requests.show.rejection_reason_placeholder'), class: "form-control" %>
          <%= f.button type: "submit", class: "btn btn-danger", data: { confirm: t('approval_requests.actions.confirm_reject') } do %>
            <i class="bi bi-x-circle me-1"></i><%= t('approval_requests.actions.reject') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
