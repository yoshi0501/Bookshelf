<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= @company_payment.company.name %> - <%= @company_payment.period_label %></h1>
    <p class="text-muted mb-0">
      <% if @company_payment.paid? %>
        <span class="badge bg-success"><%= t('company_payments.status.paid') %> <%= @company_payment.paid_at.strftime('%Y-%m-%d') %></span>
      <% elsif @company_payment.overdue? %>
        <span class="badge bg-danger"><%= t('company_payments.status.overdue') %></span>
      <% else %>
        <span class="badge bg-secondary"><%= t('company_payments.status.unpaid') %></span>
      <% end %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_company_payment_path(@company_payment), class: "btn btn-outline-secondary btn-sm" do %>
      <i class="bi bi-pencil me-1"></i><%= t('shared.actions.edit') %>
    <% end %>
    <%= link_to admin_company_payments_path, class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-arrow-left me-1"></i><%= t('shared.actions.back') %>
    <% end %>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <div class="row g-3">
      <div class="col-md-6">
        <label class="form-label fw-semibold text-muted small mb-1"><%= t('company_payments.table.company') %></label>
        <p class="mb-0"><%= link_to @company_payment.company.name, admin_company_path(@company_payment.company) %></p>
      </div>
      <div class="col-md-6">
        <label class="form-label fw-semibold text-muted small mb-1"><%= t('company_payments.table.period') %></label>
        <p class="mb-0"><%= @company_payment.period_label %></p>
      </div>
      <div class="col-md-6">
        <label class="form-label fw-semibold text-muted small mb-1"><%= t('company_payments.table.due_date') %></label>
        <p class="mb-0"><%= @company_payment.due_date&.strftime('%Y年%m月%d日') || '-' %></p>
      </div>
      <div class="col-md-6">
        <label class="form-label fw-semibold text-muted small mb-1"><%= t('company_payments.table.amount') %></label>
        <p class="mb-0 fw-medium"><%= number_to_currency(@company_payment.display_amount, unit: '¥', format: '%u%n') %></p>
      </div>
      <div class="col-md-6">
        <label class="form-label fw-semibold text-muted small mb-1"><%= t('company_payments.form.paid_at') %></label>
        <p class="mb-0"><%= @company_payment.paid_at&.strftime('%Y年%m月%d日') || '-' %></p>
      </div>
      <% if @company_payment.memo.present? %>
        <div class="col-12">
          <label class="form-label fw-semibold text-muted small mb-1"><%= t('company_payments.form.memo') %></label>
          <p class="mb-0"><%= simple_format(@company_payment.memo) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
