<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('companies.index.title') %></h1>
    <p class="text-muted mb-0"><%= t('companies.index.description') %></p>
  </div>
  <div>
    <%= link_to t('companies.index.add_company'), new_admin_company_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
    <div>
      <h5 class="card-title mb-1 fw-bold"><%= t('companies.index.title') %></h5>
      <small class="text-muted"><%= t('companies.index.description') %></small>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @companies.empty? %>
      <div class="text-center py-5">
        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light mb-3" style="width: 64px; height: 64px;">
          <i class="bi bi-building text-muted fs-3"></i>
        </div>
        <p class="text-muted fw-medium mb-3">会社がありません</p>
        <p class="text-muted small">会社が登録されていません。</p>
      </div>
    <% else %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th><%= t('companies.table.code') %></th>
              <th><%= t('companies.table.name') %></th>
              <th><%= t('companies.table.domains') %></th>
              <th><%= t('companies.table.order_prefix') %></th>
              <th><%= t('companies.table.status') %></th>
              <th class="text-end"><%= t('companies.table.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td class="font-monospace fw-semibold"><%= company.code %></td>
                <td class="fw-medium"><%= company.name %></td>
                <td class="text-muted"><%= company.domains.join(", ") %></td>
                <td class="text-muted"><%= company.order_prefix %></td>
                <td>
                  <% if company.is_active %>
                    <span class="badge bg-success"><%= t('companies.status.active') %></span>
                  <% else %>
                    <span class="badge bg-secondary"><%= t('companies.status.inactive') %></span>
                  <% end %>
                </td>
                <td class="text-end">
                  <div class="d-flex gap-2 justify-content-end">
                    <%= link_to t('shared.actions.view'), admin_company_path(company), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to t('shared.actions.edit'), edit_admin_company_path(company), class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/pagination", pagy: @pagy %>
