<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= @company.name %></h1>
    <p class="text-muted mb-0">
      <span class="font-monospace"><%= @company.code %></span>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to edit_admin_company_path(@company), class: "btn btn-outline-secondary btn-sm" do %>
      <i class="bi bi-pencil me-1"></i><%= t('companies.show.edit') %>
    <% end %>
    <%= link_to admin_companies_path, class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-arrow-left me-1"></i><%= t('companies.show.back') %>
    <% end %>
  </div>
</div>

<div class="row g-4">
  <div class="col-lg-8">
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-info-circle me-2"></i><%= t('companies.form.basic_info') %>
        </h5>
        <small class="text-muted"><%= t('companies.form.basic_info_desc') %></small>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('companies.form.code') %></label>
            <p class="mb-0 fw-medium font-monospace"><%= @company.code %></p>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('companies.form.name') %></label>
            <p class="mb-0 fw-medium"><%= @company.name %></p>
          </div>
          <div class="col-md-12">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('companies.form.domains') %></label>
            <p class="mb-0">
              <% if @company.domains.any? %>
                <% @company.domains.each do |domain| %>
                  <span class="badge bg-primary me-2 mb-1"><%= domain %></span>
                <% end %>
              <% else %>
                <span class="text-muted">-</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-12">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('companies.show.status') %></label>
            <p class="mb-0">
              <% if @company.is_active %>
                <span class="badge bg-success"><%= t('companies.status.active') %></span>
              <% else %>
                <span class="badge bg-secondary"><%= t('companies.status.inactive') %></span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-gear me-2"></i><%= t('companies.form.settings') %>
        </h5>
        <small class="text-muted"><%= t('companies.form.settings_desc') %></small>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('companies.form.order_prefix') %></label>
            <p class="mb-0 font-monospace"><%= @company.order_prefix || "-" %></p>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold text-muted small mb-1"><%= t('companies.show.current_order_sequence') %></label>
            <p class="mb-0 font-monospace"><%= @company.order_seq || "0" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
