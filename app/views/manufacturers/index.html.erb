<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('manufacturers.index.title') %></h1>
    <p class="text-muted mb-0"><%= t('manufacturers.index.description') %></p>
  </div>
  <% if current_user&.internal_admin? %>
    <%= link_to t('manufacturers.index.add_manufacturer'), new_manufacturer_path, class: "btn btn-primary btn-sm" %>
  <% end %>
</div>

<div class="card shadow-sm border-0">
  <div class="card-header bg-white border-bottom">
    <h5 class="card-title mb-1 fw-bold"><%= t('manufacturers.index.title') %></h5>
    <small class="text-muted">プラットフォーム共通。1メーカーが複数会社の商品に紐づき、複数会社の発送依頼を見ます。</small>
  </div>
  <div class="card-body p-0">
    <% if @manufacturers.empty? %>
      <div class="text-center py-5">
        <p class="text-muted fw-medium mb-0"><%= t('manufacturers.index.no_manufacturers') %></p>
        <% if current_user&.internal_admin? %>
          <p class="mt-2"><%= link_to t('manufacturers.index.add_manufacturer'), new_manufacturer_path, class: "btn btn-outline-primary btn-sm" %></p>
        <% end %>
      </div>
    <% else %>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th><%= t('manufacturers.form.code') %></th>
              <th><%= t('manufacturers.form.name') %></th>
              <th><%= t('manufacturers.form.email') %></th>
              <th><%= t('manufacturers.show.items_count') %></th>
              <th class="text-end"><span class="visually-hidden">操作</span></th>
            </tr>
          </thead>
          <tbody>
            <% @manufacturers.each do |m| %>
              <tr>
                <td class="font-monospace"><%= m.code %></td>
                <td><%= m.name %></td>
                <td><%= m.email.presence || "-" %></td>
                <td><%= m.items.count %></td>
                <td class="text-end">
                  <%= link_to m, class: "btn btn-outline-primary btn-sm" do %>
                    <i class="bi bi-eye me-1"></i><%= t('shared.actions.view') %>
                  <% end %>
                  <% if current_user&.internal_admin? %>
                    <%= link_to edit_manufacturer_path(m), class: "btn btn-outline-secondary btn-sm" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="p-3 border-top">
        <%= render "shared/pagination", pagy: @pagy %>
      </div>
    <% end %>
  </div>
</div>
