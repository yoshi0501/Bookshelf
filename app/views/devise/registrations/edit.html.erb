<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('devise.registrations.edit.title') %></h1>
    <p class="text-muted mb-0"><%= t('devise.registrations.edit.description') %></p>
  </div>
  <div>
    <%= link_to dashboard_path, class: "btn btn-outline-secondary btn-sm" do %>
      <i class="bi bi-arrow-left me-1"></i><%= t('devise.registrations.edit.back_to_dashboard') %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/error_messages", resource: resource %>

<div class="row g-4">
  <div class="col-lg-8">
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-person-circle me-2"></i><%= t('devise.registrations.edit.account_info') %>
        </h5>
        <small class="text-muted"><%= t('devise.registrations.edit.account_info_desc') %></small>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
          <div class="row g-3">
            <div class="col-md-12">
              <%= f.label :email, t('devise.registrations.edit.email'), class: "form-label fw-semibold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", readonly: true %>
              <div class="form-text"><%= t('devise.registrations.edit.email_readonly') %></div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="col-md-12">
                <div class="alert alert-warning">
                  <i class="bi bi-exclamation-triangle me-2"></i>
                  <%= t('devise.registrations.edit.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-shield-check me-2"></i><%= t('devise.registrations.edit.verify_password_title') %>
        </h5>
        <small class="text-muted"><%= t('devise.registrations.edit.verify_password_desc') %></small>
      </div>
      <div class="card-body">
        <%= form_with url: verify_password_user_path, method: :post, local: true, class: "needs-validation" do |f| %>
          <div class="row g-3">
            <div class="col-md-8">
              <%= f.label :password, t('devise.registrations.edit.verify_password_label'), class: "form-label fw-semibold" %>
              <div class="input-group">
                <%= f.password_field :password, class: "form-control", placeholder: t('devise.registrations.edit.verify_password_placeholder'), autocomplete: "current-password" %>
                <button type="button" class="btn btn-outline-secondary password-toggle-btn" aria-label="パスワードを表示" title="パスワードを表示">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <%= f.submit t('devise.registrations.edit.verify_password_submit'), class: "btn btn-outline-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-key me-2"></i><%= t('devise.registrations.edit.change_password') %>
        </h5>
        <small class="text-muted"><%= t('devise.registrations.edit.change_password_desc') %></small>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
          <div class="row g-3">
            <div class="col-md-12">
              <%= f.label :current_password, t('devise.registrations.edit.current_password'), class: "form-label fw-semibold" %>
              <div class="input-group">
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", required: true, title: t('devise.registrations.edit.current_password'), data: { msg_required: t('activerecord.errors.models.user.attributes.current_password.blank') } %>
                <button type="button" class="btn btn-outline-secondary password-toggle-btn" aria-label="パスワードを表示" title="パスワードを表示">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
              <div class="form-text"><%= t('devise.registrations.edit.current_password_help') %></div>
            </div>

            <div class="col-md-6">
              <%= f.label :password, t('devise.registrations.edit.new_password'), class: "form-label fw-semibold" %>
              <div class="input-group">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", title: t('devise.registrations.edit.new_password'), minlength: @minimum_password_length || 8, data: { msg_minlength: t('devise.registrations.edit.password_minimum', count: @minimum_password_length || 8) } %>
                <button type="button" class="btn btn-outline-secondary password-toggle-btn" aria-label="パスワードを表示" title="パスワードを表示">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
              <% if @minimum_password_length %>
                <div class="form-text">
                  <i class="bi bi-info-circle me-1"></i><%= t('devise.registrations.edit.password_minimum', count: @minimum_password_length) %>
                </div>
              <% end %>
              <div class="form-text text-muted">
                <i class="bi bi-info-circle me-1"></i><%= t('devise.registrations.edit.password_leave_blank') %>
              </div>
            </div>

            <div class="col-md-6">
              <%= f.label :password_confirmation, t('devise.registrations.edit.password_confirmation'), class: "form-label fw-semibold" %>
              <div class="input-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", title: t('devise.registrations.edit.password_confirmation') %>
                <button type="button" class="btn btn-outline-secondary password-toggle-btn" aria-label="パスワードを表示" title="パスワードを表示">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>
          </div>

          <div class="mt-4 d-flex justify-content-end gap-2">
            <%= link_to dashboard_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-x-circle me-1"></i><%= t('shared.actions.cancel') %>
            <% end %>
            <%= button_tag type: "submit", class: "btn btn-primary" do %>
              <i class="bi bi-check-circle me-1"></i><%= t('devise.registrations.edit.update') %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-1 fw-bold">
          <i class="bi bi-info-circle me-2"></i><%= t('devise.registrations.edit.password_requirements') %>
        </h5>
        <small class="text-muted"><%= t('devise.registrations.edit.password_requirements_desc') %></small>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mb-0">
          <li class="mb-2">
            <i class="bi bi-check-circle text-success me-2"></i>
            <small><%= t('devise.registrations.edit.requirement_length') %></small>
          </li>
          <li class="mb-2">
            <i class="bi bi-check-circle text-success me-2"></i>
            <small><%= t('devise.registrations.edit.requirement_current') %></small>
          </li>
          <li class="mb-0">
            <i class="bi bi-check-circle text-success me-2"></i>
            <small><%= t('devise.registrations.edit.requirement_match') %></small>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('.needs-validation');
    
    forms.forEach(function(form) {
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
      
      // カスタムバリデーションメッセージを設定
      const fields = form.querySelectorAll('input[required], input[minlength]');
      fields.forEach(function(field) {
        field.addEventListener('invalid', function(event) {
          if (field.validity.valueMissing) {
            const msg = field.dataset.msgRequired || 'この項目は必須です';
            field.setCustomValidity(msg);
          } else if (field.validity.tooShort) {
            const msg = field.dataset.msgMinlength || '8文字以上で入力してください';
            field.setCustomValidity(msg);
          } else {
            field.setCustomValidity('');
          }
        });
        
        field.addEventListener('input', function() {
          field.setCustomValidity('');
        });
      });
    });
  });
</script>
