<div class="card shadow-lg border-0">
  <div class="card-body p-5">
    <div class="text-center mb-4">
      <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-gradient mb-3 shadow-sm" style="width: 64px; height: 64px;">
        <i class="bi bi-key text-white" style="font-size: 2rem;"></i>
      </div>
      <h2 class="card-title fw-bold mb-2"><%= t('devise.passwords.new.title') %></h2>
      <p class="text-muted small"><%= t('devise.passwords.new.description') %></p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, t('devise.passwords.new.email'), class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", required: true, placeholder: "example@company.com" %>
      </div>

      <div class="d-grid mb-4">
        <%= f.submit t('devise.passwords.new.submit'), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <hr class="my-4">
    <p class="text-center text-muted small mb-0">
      <%= link_to new_session_path(resource_name), class: "text-decoration-none fw-semibold" do %>
        <i class="bi bi-arrow-left me-1"></i><%= t('devise.passwords.new.back_to_sign_in') %>
      <% end %>
    </p>
  </div>
</div>
