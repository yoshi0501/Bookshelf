<%
  badge_classes = case status
  when "draft"
    "bg-gray-100 text-gray-800"
  when "confirmed"
    "bg-blue-100 text-blue-800"
  when "shipped"
    "bg-yellow-100 text-yellow-800"
  when "delivered"
    "bg-green-100 text-green-800"
  when "cancelled"
    "bg-red-100 text-red-800"
  else
    "bg-gray-100 text-gray-800"
  end
%>
<span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= badge_classes %>">
  <%= status.titleize %>
</span>
