<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('items.import.title') %></h1>
    <p class="text-muted mb-0"><%= t('items.import.description') %></p>
  </div>
  <div>
    <%= link_to t('shared.actions.back'), items_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>

<%= render "shared/form_errors", resource: Item.new if flash[:alert] %>

<% if flash[:alert] %>
  <div class="alert alert-danger mb-4">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-header bg-white border-bottom">
    <h5 class="card-title mb-1 fw-bold">
      <i class="bi bi-file-earmark-spreadsheet me-2"></i><%= t('items.import.upload_section') %>
    </h5>
    <small class="text-muted"><%= t('items.import.upload_desc') %></small>
  </div>
  <div class="card-body">
    <%= form_with url: import_items_path, method: :post, multipart: true, local: true do |f| %>
      <div class="row g-3">
        <div class="col-md-12">
          <%= label_tag :csv_file, t('items.import.csv_file'), class: "form-label fw-semibold" %>
          <%= file_field_tag :csv_file, 
              accept: ".csv", 
              class: "form-control", 
              required: true %>
          <div class="form-text"><%= t('items.import.file_help') %></div>
        </div>
      </div>

      <div class="mt-4">
        <%= f.submit t('items.import.upload_button'), class: "btn btn-primary" %>
        <%= link_to t('shared.actions.cancel'), items_path, class: "btn btn-outline-secondary ms-2" %>
      </div>
    <% end %>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-header bg-white border-bottom">
    <h5 class="card-title mb-1 fw-bold">
      <i class="bi bi-info-circle me-2"></i><%= t('items.import.format_section') %>
    </h5>
    <small class="text-muted"><%= t('items.import.format_desc') %></small>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered table-sm">
        <thead class="table-light">
          <tr>
            <th><%= t('items.import.csv_header') %></th>
            <th><%= t('items.import.required') %></th>
            <th><%= t('items.import.description') %></th>
            <th><%= t('items.import.example') %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>item_code</code></td>
            <td><span class="badge bg-danger">必須</span></td>
            <td><%= t('items.import.item_code_desc') %></td>
            <td><code>ITEM001</code></td>
          </tr>
          <tr>
            <td><code>name</code></td>
            <td><span class="badge bg-danger">必須</span></td>
            <td><%= t('items.import.name_desc') %></td>
            <td><code>商品名</code></td>
          </tr>
          <tr>
            <td><code>unit_price</code></td>
            <td><span class="badge bg-danger">必須</span></td>
            <td><%= t('items.import.unit_price_desc') %></td>
            <td><code>1000</code></td>
          </tr>
          <tr>
            <td><code>company_code</code></td>
            <td><span class="badge bg-danger">必須</span></td>
            <td><%= t('items.import.company_code_desc') %></td>
            <td><code>ACME</code></td>
          </tr>
          <tr>
            <td><code>co2_per_unit</code></td>
            <td><span class="badge bg-secondary">任意</span></td>
            <td><%= t('items.import.co2_per_unit_desc') %></td>
            <td><code>1.5</code></td>
          </tr>
          <tr>
            <td><code>is_active</code></td>
            <td><span class="badge bg-secondary">任意</span></td>
            <td><%= t('items.import.is_active_desc') %></td>
            <td><code>true</code> / <code>1</code> / <code>（空白）</code></td>
          </tr>
          <tr>
            <td><code>visible_company_codes</code></td>
            <td><span class="badge bg-secondary">任意</span></td>
            <td><%= t('items.import.visible_company_codes_desc') %></td>
            <td><code>ACME,COMPANY_B</code></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="alert alert-info mt-3">
      <h6 class="alert-heading"><%= t('items.import.note_title') %></h6>
      <ul class="mb-0">
        <li><%= t('items.import.note_1') %></li>
        <li><%= t('items.import.note_2') %></li>
        <li><%= t('items.import.note_3') %></li>
        <li><%= t('items.import.note_4') %></li>
      </ul>
    </div>
  </div>
</div>

<% if @import_errors.present? && @import_errors.any? %>
  <div class="card shadow-sm border-0 border-danger mt-4">
    <div class="card-header bg-danger text-white">
      <h5 class="card-title mb-1 fw-bold">
        <i class="bi bi-exclamation-triangle-fill me-2"></i><%= t('items.import.errors_title') %>
      </h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-sm">
          <thead>
            <tr>
              <th><%= t('items.import.error_row') %></th>
              <th><%= t('items.import.error_item_code') %></th>
              <th><%= t('items.import.error_message') %></th>
            </tr>
          </thead>
          <tbody>
            <% @import_errors.each do |error| %>
              <tr>
                <td><%= error[:row] %></td>
                <td><%= error[:item_code] || "-" %></td>
                <td class="text-danger"><%= error[:message] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
