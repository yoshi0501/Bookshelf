<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h2 fw-bold mb-2"><%= t('items.index.title') %></h1>
    <p class="text-muted mb-0"><%= t('items.index.description') %></p>
  </div>
  <% if current_user&.internal_admin? %>
    <div class="d-flex gap-2">
      <%= link_to t('items.index.add_item'), new_item_path, class: "btn btn-primary btn-sm" %>
      <%= link_to t('items.import.title'), import_items_path, class: "btn btn-outline-primary btn-sm" %>
    </div>
  <% end %>
</div>

<% if @companies.present? && @companies.size > 1 %>
  <!-- 会社タブ（複数会社がある場合のみ表示） -->
  <ul class="nav nav-tabs mb-4" role="tablist">
    <% @companies.each_with_index do |company, index| %>
      <li class="nav-item" role="presentation">
        <%= link_to items_path(company_id: company.id), 
            class: "nav-link #{'active' if @selected_company&.id == company.id}",
            data: { turbo: false } do %>
          <i class="bi bi-building me-1"></i><%= company.name %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="card shadow-sm border-0">
  <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
    <div>
      <h5 class="card-title mb-1 fw-bold">
        <% if @selected_company %>
          <%= @selected_company.name %> - <%= t('items.index.title') %>
        <% else %>
          <%= t('items.index.title') %>
        <% end %>
      </h5>
      <small class="text-muted"><%= t('items.index.description') %></small>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @items.empty? %>
      <div class="text-center py-5">
        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light mb-3" style="width: 64px; height: 64px;">
          <i class="bi bi-box text-muted fs-3"></i>
        </div>
        <p class="text-muted fw-medium mb-3">商品がありません</p>
        <p class="text-muted small">
          <% if @selected_company %>
            <%= @selected_company.name %>に商品が登録されていません。
          <% else %>
            商品が登録されていません。
          <% end %>
        </p>
        <% if current_user&.internal_admin? %>
          <%= link_to new_item_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle me-1"></i> 新規商品を追加
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th style="width: 64px;"></th>
              <th><%= t('items.table.code') %></th>
              <th><%= t('items.table.name') %></th>
              <th class="text-end"><%= t('items.table.unit_price') %></th>
              <th class="text-end"><%= t('items.table.co2_per_unit') %></th>
              <th><%= t('items.table.status') %></th>
              <th class="text-end"><%= t('items.table.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td class="align-middle">
                  <% if item.image.attached? %>
                    <%= link_to item_path(item) do %>
                      <%= image_tag item.image, class: "rounded", style: "width: 48px; height: 48px; object-fit: contain; background: #f8f9fa;" %>
                    <% end %>
                  <% else %>
                    <span class="d-inline-flex align-items-center justify-content-center rounded bg-light text-muted" style="width: 48px; height: 48px;">
                      <i class="bi bi-image"></i>
                    </span>
                  <% end %>
                </td>
                <td class="font-monospace fw-semibold"><%= item.item_code %></td>
                <td class="fw-medium"><%= item.name %></td>
                <td class="text-end fw-semibold">
                  <%= number_to_currency(item.unit_price, unit: "¥", precision: 0) %>
                </td>
                <td class="text-end text-muted"><%= item.co2_per_unit %> kg</td>
                <td>
                  <% if item.is_active %>
                    <span class="badge bg-success"><%= t('items.status.active') %></span>
                  <% else %>
                    <span class="badge bg-secondary"><%= t('items.status.inactive') %></span>
                  <% end %>
                </td>
                <td class="text-end">
                  <div class="d-flex gap-2 justify-content-end">
                    <%= link_to t('shared.actions.view'), item_path(item), class: "btn btn-sm btn-outline-primary" %>
                    <% if current_user&.internal_admin? %>
                      <%= link_to t('shared.actions.edit'), edit_item_path(item), class: "btn btn-sm btn-outline-secondary" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/pagination", pagy: @pagy %>
